# Külső API konfiguráció
EXTERNAL_API_URL=https://api.example.com
EXTERNAL_API_TIMEOUT=30

# SSL ellenőrzés (production-ben MINDIG true!)
# Fejlesztéshez self-signed tanúsítványnál false-ra állítható
SSL_VERIFY=true

# Titkosítási kulcsok
ENCRYPTION_KEY=your-32-character-encryption-key
SYSTEM_ID=your-system-identifier

# Session konfiguráció
SESSION_LIFETIME=3600
SESSION_NAME=myapp_session

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Debug mód (production-ben false!)
DEBUG_MODE=false
